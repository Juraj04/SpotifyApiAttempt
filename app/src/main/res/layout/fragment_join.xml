<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.outofbounds85.spotifyapiattempt.JoinFragment">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:hint="Code"
        android:textColorHint="@color/colorWhite"
        android:textAlignment="center"
        android:ems="10"
        android:id="@+id/etFragJoinCode"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/roundededittext"
        android:textColor="@color/colorWhite"/>



    <LinearLayout android:id="@+id/linearLayoutFragJoin"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_below="@+id/etFragJoinCode"
        android:gravity="center">

        <Button
            android:text="@string/btnEnter"
            android:layout_width="@dimen/mainActButtonSize"
            android:layout_height="40dp"
            android:id="@+id/btnFragJoinEnter"
            android:layout_marginTop="150dp"
            android:background="@drawable/buttonshape"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:text="@string/or"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/twFragJoinOr"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"/>

        <Button
            android:text="@string/btnScan"
            android:layout_width="@dimen/mainActButtonSize"
            android:layout_height="40dp"
            android:id="@+id/btnFragJoinScan"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonshape"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>
</LinearLayout>
