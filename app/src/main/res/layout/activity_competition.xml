<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_competition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.outofbounds85.spotifyapiattempt.CompetitionActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:id="@+id/compTableLayout">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageViewCompMe"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circleimageview"
                app:srcCompat="@android:drawable/btn_dialog"
                android:layout_weight="0.2"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/twCompMyName"
                android:text="My name"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_weight="0.2"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/twCompMyScore"
                android:text="0"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_weight="0.1"/>

            <TextView
                android:text=" : "
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/twCompRivalScore"
                android:text="0"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_weight="0.1"/>

            <TextView
                android:id="@+id/twCompRivalName"
                android:text="His name"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_weight="0.2"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/imageViewCompRival"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circleimageview"
                app:srcCompat="@android:drawable/btn_dialog"
                android:layout_weight="0.2"
                android:layout_marginLeft="10dp"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="TU SI DAJ TEN POSUVNIK"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:gravity="center"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp">

        <RadioButton
            android:text="prva"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:text="druha"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:text="tretia"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:text="stvrta"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <Button
        android:text="@string/submit"
        android:layout_width="@dimen/mainActButtonSize"
        android:layout_height="40dp"
        android:id="@+id/btnCompSubmit"
        android:layout_marginTop="100dp"
        android:background="@drawable/buttonshape"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center"/>


</LinearLayout>
