<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.outofbounds85.spotifyapiattempt.HostFragment">


    <TextView
        android:text="@string/waiting_for_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twFragHostHeading"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"/>

    <TextView
        android:text="Delete me from xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twFragHostCode"
        android:layout_marginTop="36dp"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        android:layout_below="@+id/twFragHostHeading"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@android:drawable/btn_dialog"
        android:layout_below="@+id/twFragHostCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:id="@+id/imageView" />
</RelativeLayout>
